<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    >
    <RelativeLayout
        android:id="@+id/rlVideo"
        android:layout_width="210dp"
        android:layout_height="110dp"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivCover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/bofang"
            android:layout_centerInParent="true"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/ivcover_shade_sp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivComment"
                android:layout_width="11dp"
                android:layout_height="10dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="7dp"
                android:scaleType="fitXY"
                android:src="@mipmap/pinglun" />

            <TextView
                android:id="@+id/tvCommentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="7dp"
                android:layout_toRightOf="@+id/ivComment"
                android:gravity="bottom"
                android:text="1200"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivLike"
                android:layout_width="11dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="17dp"
                android:layout_marginBottom="7dp"
                android:layout_toRightOf="@+id/tvCommentCount"
                android:scaleType="fitXY"
                android:src="@mipmap/dianzan" />

            <TextView
                android:id="@+id/tvLikeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="7dp"
                android:layout_toRightOf="@+id/ivLike"
                android:gravity="bottom"
                android:text="1200"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tvVideoTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="7dp"
                android:gravity="bottom"
                android:text="05:00"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </RelativeLayout>
    </RelativeLayout>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivUserHead"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@+id/rlVideo"
        android:layout_marginTop="11dp"
        />
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlVideo"
        android:layout_toRightOf="@id/ivUserHead"
        android:layout_marginLeft="10dp"
        android:textSize="12sp"
        android:layout_marginTop="12dp"
        android:textColor="@color/text_black_333"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        />
    <TextView
        android:id="@+id/tvDes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:layout_toRightOf="@id/ivUserHead"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:textSize="10sp"
        android:textColor="@color/text_gray_999"
        android:maxLines="1"
        android:ellipsize="end"
        />
</RelativeLayout>